
<!-- @author Petar Novkovic -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09C"
    android:padding="@dimen/widget_margin">

    <Button
        android:id="@+id/queueWidget"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Queue" />

    <ListView
        android:id="@+id/widgetList"
        android:layout_width="match_parent"
        android:layout_height="456dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fastHSWidget" />

    <Button
        android:id="@+id/fastHSWidget"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/queueWidget"
        android:text="Highscores fast" />

    <Button
        android:id="@+id/hardHSWidget"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/queueWidget"
        android:text="Highscores Hard" />
</RelativeLayout>